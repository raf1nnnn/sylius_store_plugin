    <div class="ui hidden divider"></div>

    <div class="ui stackable grid">
        <div class="four wide column">
            {% include '@DotitSyliusStorePlugin/Shop/store/Product/Index/_sidebar.html.twig' %}
        </div>
        <div class="twelve wide column">
            {% include '@DotitSyliusStorePlugin/Shop/store/Product/Index/_main.html.twig' %}
