<div class="{% if slugField.vars.required %}required {% endif %}field{% if slugField.vars.errors|length > 0 %} error{% endif %} ui loadable form">
    {{ form_label(slugField) }}
    {% if slugField.vars.value == null %}
        {{ form_widget(slugField, {'attr': {'data-url': path('dotit_sylius_store_plugin_admin_ajax_store_generate_slug')}}) }}
    {% else %}
        <div class="ui action input">
            {{ form_widget(slugField, {'attr': {'readonly': 'readonly', 'data-url': path('dotit_sylius_store_plugin_admin_ajax_store_generate_slug')}}) }}
            <span class="ui icon button toggle-store-slug-modification">
                <i class="lock icon"></i>
            </span>
        </div>
    {% endif %}
    {{ form_errors(slugField) }}
</div>
